<Window x:Class="Film_geek.Windows.AddOrEditFilm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Film_geek.Windows"
        mc:Ignorable="d"
        Title="AddOrEditFilm" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <CheckBox Name="CHB_Director" Grid.Row="2" Grid.Column="0"/>
            <CheckBox Name="CHB_Actors" Grid.Row="3" Grid.Column="0"/>
            <CheckBox Name="CHB_Rating" Grid.Row="4" Grid.Column="0"/>
            <Label Content="Tytuł:" Grid.Row="0" Grid.Column="1"/>
            <Label Content="Gatunek:" Grid.Row="1" Grid.Column="1"/>
            <Label Content="Reżyser:" Grid.Row="2" Grid.Column="1"/>
            <Label Content="Aktorzy:" Grid.Row="3" Grid.Column="1"/>
            <Label Content="Ocena:" Grid.Row="4" Grid.Column="1"/>
            <TextBox Name="TB_Name" Grid.Row="0" Grid.Column="2"/>
            <ComboBox Name="CB_Genre" Grid.Row="1" Grid.Column="2"/>
            <TextBox Name="TB_Directors" Grid.Row="2" Grid.Column="2"/>
            <TextBox Name="TB_Actors" Grid.Row="3" Grid.Column="2"/>
            <Slider Name="SL_Rating" Grid.Row="4" Grid.Column="2"/>
        </Grid>
    </Grid>
</Window>

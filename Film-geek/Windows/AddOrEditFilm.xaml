<Window x:Class="Film_geek.Windows.AddOrEditFilm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Film_geek.Windows"
        mc:Ignorable="d"
        Title="AddOrEditFilm" Height="600" Width="300">
    <Window.Resources>
        <!--Potrzebne do zaimportowania stylu z App.xaml-->
    </Window.Resources>
    <Grid Style="{StaticResource LightBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <CheckBox Name="CHB_Director" Grid.Row="2" Grid.Column="0"/>
            <CheckBox Name="CHB_Actors" Grid.Row="3" Grid.Column="0"/>
            <CheckBox Name="CHB_Rating" Grid.Row="4" Grid.Column="0"/>
            <Label Content="Tytuł:" Grid.Row="0" Grid.Column="1"/>
            <Label Content="Gatunek:" Grid.Row="1" Grid.Column="1"/>
            <Label Content="Reżyser:" Grid.Row="2" Grid.Column="1"/>
            <Label Content="Aktorzy:" Grid.Row="3" Grid.Column="1"/>
            <Label Content="Ocena:" Grid.Row="4" Grid.Column="1"/>
            <TextBox Name="TB_Name" Grid.Row="0" Grid.Column="2"/>
            <ComboBox Name="CB_Genre" Grid.Row="1" Grid.Column="2"/>
            <TextBox Name="TB_Directors" Grid.Row="2" Grid.Column="2"/>
            <TextBox Name="TB_Actors" Grid.Row="3" Grid.Column="2"/>
            <Slider Name="SL_Rating" Grid.Row="4" Grid.Column="2"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" BorderBrush="Black" BorderThickness="1">
                <GroupBox.Header>
                    <Label Content="Obejrzane?"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <RadioButton Name="RB_Watched_Y" Grid.Column="0" Content="Tak"/>
                    <RadioButton Name="RB_Watched_N" Grid.Column="1" IsChecked="True" Content="Nie"/>
                </Grid>
            </GroupBox>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <CheckBox Name="CHB_ReleaseDate" Grid.Column="0" Content="Data Premiery:"/>
                <Button Name="BTN_ReleaseDatePicker" Grid.Column="1" Content="Wybierz datę..."/>
            </Grid>
            <!--???-->
            <Border Grid.Row="2" BorderBrush="Black">
                <TextBlock Name="TBL_Description" Grid.Row="2"/>
            </Border>
            
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <CheckBox Name="CHB_Image" Grid.Column="0" Content="Zdjęcie"/>
                <Button Name="BTN_ImagePicker" Grid.Column="1" Content="Wybierz plik..."/>
            </Grid>
            
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Name="BTN_Confirm" Grid.Column="0" Content="OK"/>
                <Button Name="BTN_Cancel" Grid.Column="1" Content="Anuluj"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
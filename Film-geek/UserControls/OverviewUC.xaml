<UserControl x:Class="Film_geek.UserControls.OverviewUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Film_geek.UserControls"
             xmlns:app="clr-namespace:Film_geek.Classes"
             xmlns:comm="clr-namespace:Film_geek.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1040"
             Loaded="OverviewUC_Loaded"
             UseLayoutRounding="True">
    <UserControl.Resources>
        <app:ImageConverter x:Key="ImageConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="Gray">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Name="BTN_FilmsView">
                    <AccessText>
                        _Przeglądaj filmy
                    </AccessText>
                </Button>
                <Button Name="BTN_AddFilm" Command="comm:AddFilmCommand.Add">
                    <AccessText>
                        _Dodaj film
                    </AccessText>
                </Button>
                <Button Name="BTN_Help" Click="BTN_Help_Click">
                    <AccessText>
                        _Pomoc
                    </AccessText>
                </Button>

            </StackPanel>
            <Grid Grid.Column="1" Name="GD_UserDetails" VerticalAlignment="Center" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Image Source="{Binding Path=ImagePath, Converter={StaticResource ImageConverter}}" MaxHeight="64" RenderOptions.EdgeMode="Aliased" RenderOptions.BitmapScalingMode="Fant" HorizontalAlignment="Center" />
                <Label Grid.Row="1" Content="{Binding Path=Nickname}" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="2" VerticalAlignment="Center">
                <StackPanel>
                    <Button Name="BTN_LogOut" HorizontalAlignment="Stretch" Command="comm:LogOutCommand.LogOut">
                        <AccessText>
                            _Wyloguj
                        </AccessText>
                    </Button>
                    <Button Grid.Row="1" Name="BTN_Account" HorizontalAlignment="Stretch" Command="comm:ProfileSettings.Profile">
                        <AccessText>
                            _Moje konto
                        </AccessText>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="LB_Notifications" Margin="10 5">
                <ListBoxItem>Powiadomienie 1</ListBoxItem>
                <ListBoxItem>Powiadomienie 2</ListBoxItem>
                <ListBoxItem>Powiadomienie 3</ListBoxItem>
            </ListBox>
            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Name="BTN_PlaylistView" Click="BTN_PlaylistView_Click">
                    <AccessText>
                        Przegladaj _listy
                    </AccessText>
                </Button>
                <Viewbox Grid.Row="1" Margin="20">
                    <Calendar SelectionMode="MultipleRange">
                    </Calendar>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

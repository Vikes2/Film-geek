<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Film_geek.ResourceDictionaries">
    <Style x:Key="DefaultWindow">
        <Setter Property="Window.Background" Value="#FFFAF0"/>
    </Style>
    <Style x:Key="StandardContainer">
        <Setter Property="FrameworkElement.Margin" Value="15" />
        <Setter Property="Control.Padding" Value="15"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="FrameworkElement.Margin" Value="10 20"/>
        <Setter Property="Control.Padding" Value="5 10"/>
        <Setter Property="Control.Background" Value="#8B0000"/>
    </Style>

    <Style x:Key="UserPanel">
        <Setter Property="Grid.Background" Value="#4B0082"/>
        <Setter Property="Control.Foreground" Value="White"/>
    </Style>

    <Style x:Key="Header-1" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="#001f5c"/>
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="Margin" Value="15" />
    </Style>
</ResourceDictionary>